<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN 2.0//EN"
        "http://www.springframework.org/dtd/spring-beans-2.0.dtd">

<beans>

	<!-- bean definitions here -->
	<bean name="a" class="com.tcs.ioc.A" scope="singleton" init-method="myInit" destroy-method="myDestroy">
	</bean>
	
	<bean name="a1" class="com.tcs.ioc.A" scope="singleton" init-method="myInit" destroy-method="myDestroy">
	</bean>

	<!-- byType -> dependency is injected by setter method -->
	<bean name="b" class="com.tcs.ioc.B" autowire="byType">
	</bean>

	<!-- constructor -> dependency is injected by setter method -->
	<bean name ="c" class="com.tcs.ioc.C" autowire="constructor">
	</bean>
</beans>